{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "allowJs": true,
    "baseUrl": ".",
    "importHelpers": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"]
  }
}
